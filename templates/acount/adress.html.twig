{% extends 'base.html.twig' %}

{% block title %}Mes Adresses - OM Sport{% endblock %}

{% block content %}
    <a href="{{ path('add_adress') }}" class="btn btn-info btn-sm float-right">Ajouter une adresse</a>
    <h1>Mes Adresses âœ…</h1>
    Gerer mes adresses<br/>
    <a href="{{ path('acount') }}">Retour</a><hr/><br/>
    {% if app.user.adresses|length == 0 %}
        <p class="text-center">
        <h5>Vous n'avez pas d'adresse dans votre compte client, pour en ajouter une, <a href="{{ path('add_adress') }}">cliquer ici</a></h5>
        </p>
        {% else %}
          <div class="row">
            {% for adress in app.user.adresses %}
                <div class="col-md-4">
                    <div class="card" style="width: 18rem">
                        <div class="card-body">
                            <h5 class="card-title">{{ adress.name }}</h5>
                            <p class="card-text">
                                {{ adress.adress }}<br>
                                {{ adress.codepostal }} - {{ adress.commune }} - {{ adress.pays }}
                            </p>
                            <a href="{{ path('edit_adress', {'id':adress.id}) }}">Modifier</a>|<a href="{{ path('remove_adress', {'id': adress.id}) }}">Supprimer</a>
                        </div>
                    </div>
                </div>


            {% endfor %}
          </div>
        {% endif %}

    {% endblock %}
