{% extends 'base.html.twig' %}

{% block title %}Valider ma commande - OM Sport{% endblock %}

{% block content %}

    <h2>Je passe ma commande</h2>
    <p>Choisissez vos préférences avant de passer votre commande sur OM Sport</p>
    <hr>
    <div class="row">
        <div class="col-md-6">
            {% set formHtml %}
                {{ form_start(form, {action:path('app_order_recap')}) }}
                    {{ form_label(form.adresses, 'Choisissez votre adresse de livraison') }}
                <a href="{{ path('add_adress') }}">Ajouter une adresse</a>
                {{ form_end(form) }}
            {% endset %}
            {{ formHtml|replace({'[br]' : '<br/>'})|raw }}
            <b></b>
        </div>
        <div class="col-md-6">
            <div class="text-center">
                <b>Votre commandes</b><br/>
                <p>Retrouvez tous les produits que vous avez choisi</p>
            </div>
            <div class="order-summary">
            {% for product in cart %}
                <div class="row mt-2">
                    <div class="col-2">
                        <img src="/Images/{{ product.product.Illustration }}" alt="{{ product.product.price }}" height="75px">
                    </div>
                    <div class="col-8 my-auto">
                        {{ product.product.name }}</br>
                        <small>{{ product.product.subtitle }}</small>
                    </div>
                    <div class="col-2 my-auto">
                        x{{ product.quantity }}
                    </div><br/>
                </div>
            {% endfor %}
            </div>

        </div>
    </div>

{% endblock %}
